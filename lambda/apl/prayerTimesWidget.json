{
  "type": "APL",
  "version": "2023.3",
  "description": "Widget d'affichage des horaires de pri√®re",
  "license": "Copyright 2024",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.7.0"
    }
  ],
  "resources": [
    {
      "colors": {
        "colorPrimary": "#1A5F3F",
        "colorSecondary": "#2C8C5F",
        "colorAccent": "#FFD700",
        "colorBackground": "#0F1419",
        "colorText": "#FFFFFF",
        "colorTextSecondary": "#B0B0B0"
      },
      "dimensions": {
        "headerHeight": "120dp",
        "prayerItemHeight": "140dp",
        "spacing": "20dp"
      }
    }
  ],
  "styles": {
    "headerStyle": {
      "values": [
        {
          "color": "@colorText",
          "fontSize": "48dp",
          "fontWeight": "700",
          "textAlign": "center"
        }
      ]
    },
    "cityStyle": {
      "values": [
        {
          "color": "@colorTextSecondary",
          "fontSize": "32dp",
          "textAlign": "center"
        }
      ]
    },
    "prayerNameStyle": {
      "values": [
        {
          "color": "@colorText",
          "fontSize": "42dp",
          "fontWeight": "600"
        }
      ]
    },
    "prayerTimeStyle": {
      "values": [
        {
          "color": "@colorAccent",
          "fontSize": "52dp",
          "fontWeight": "700"
        }
      ]
    },
    "dateStyle": {
      "values": [
        {
          "color": "@colorTextSecondary",
          "fontSize": "28dp",
          "textAlign": "center"
        }
      ]
    }
  },
  "layouts": {
    "PrayerItem": {
      "parameters": [
        "prayerName",
        "prayerTime",
        "prayerIcon",
        "isHighlighted"
      ],
      "item": {
        "type": "Container",
        "width": "100%",
        "height": "@prayerItemHeight",
        "direction": "row",
        "alignItems": "center",
        "justifyContent": "spaceBetween",
        "paddingLeft": "40dp",
        "paddingRight": "40dp",
        "paddingTop": "15dp",
        "paddingBottom": "15dp",
        "items": [
          {
            "type": "Container",
            "direction": "row",
            "alignItems": "center",
            "spacing": "30dp",
            "items": [
              {
                "type": "Text",
                "text": "${prayerIcon}",
                "fontSize": "56dp"
              },
              {
                "type": "Text",
                "text": "${prayerName}",
                "style": "prayerNameStyle"
              }
            ]
          },
          {
            "type": "Text",
            "text": "${prayerTime}",
            "style": "prayerTimeStyle"
          }
        ],
        "when": "${!isHighlighted}"
      }
    },
    "HighlightedPrayerItem": {
      "parameters": [
        "prayerName",
        "prayerTime",
        "prayerIcon"
      ],
      "item": {
        "type": "Container",
        "width": "100%",
        "height": "@prayerItemHeight",
        "direction": "row",
        "alignItems": "center",
        "justifyContent": "spaceBetween",
        "paddingLeft": "40dp",
        "paddingRight": "40dp",
        "paddingTop": "15dp",
        "paddingBottom": "15dp",
        "backgroundColor": "@colorPrimary",
        "borderRadius": "20dp",
        "items": [
          {
            "type": "Container",
            "direction": "row",
            "alignItems": "center",
            "spacing": "30dp",
            "items": [
              {
                "type": "Text",
                "text": "${prayerIcon}",
                "fontSize": "56dp"
              },
              {
                "type": "Text",
                "text": "${prayerName}",
                "style": "prayerNameStyle",
                "fontSize": "48dp"
              }
            ]
          },
          {
            "type": "Container",
            "direction": "column",
            "alignItems": "end",
            "items": [
              {
                "type": "Text",
                "text": "${prayerTime}",
                "style": "prayerTimeStyle",
                "fontSize": "58dp"
              },
              {
                "type": "Text",
                "text": "ÿßŸÑÿµŸÑÿßÿ© ÿßŸÑŸÇÿßÿØŸÖÿ©",
                "color": "@colorAccent",
                "fontSize": "24dp"
              }
            ]
          }
        ]
      }
    }
  },
  "mainTemplate": {
    "parameters": [
      "prayerTimesData"
    ],
    "items": [
      {
        "type": "Container",
        "width": "100%",
        "height": "100%",
        "backgroundColor": "@colorBackground",
        "direction": "column",
        "paddingTop": "40dp",
        "paddingBottom": "40dp",
        "items": [
          {
            "type": "Container",
            "width": "100%",
            "height": "@headerHeight",
            "direction": "column",
            "alignItems": "center",
            "justifyContent": "center",
            "spacing": "10dp",
            "items": [
              {
                "type": "Text",
                "text": "ÿ£ŸàŸÇÿßÿ™ ÿßŸÑÿµŸÑÿßÿ©",
                "style": "headerStyle"
              },
              {
                "type": "Text",
                "text": "${prayerTimesData.properties.city}",
                "style": "cityStyle"
              },
              {
                "type": "Text",
                "text": "${prayerTimesData.properties.date}",
                "style": "dateStyle"
              }
            ]
          },
          {
            "type": "Container",
            "width": "100%",
            "grow": 1,
            "paddingTop": "30dp",
            "paddingLeft": "60dp",
            "paddingRight": "60dp",
            "direction": "column",
            "spacing": "25dp",
            "items": [
              {
                "type": "Container",
                "data": "${prayerTimesData.properties.prayers}",
                "width": "100%",
                "direction": "column",
                "spacing": "20dp",
                "numbered": true,
                "items": [
                  {
                    "type": "PrayerItem",
                    "prayerName": "${data.name}",
                    "prayerTime": "${data.time}",
                    "prayerIcon": "${data.icon}",
                    "isHighlighted": false
                  }
                ]
              }
            ]
          },
          {
            "type": "Container",
            "width": "100%",
            "height": "60dp",
            "alignItems": "center",
            "justifyContent": "center",
            "items": [
              {
                "type": "Text",
                "text": "üïå ÿ≠ÿßŸÅÿ∏ ÿπŸÑŸâ ÿßŸÑÿµŸÑÿßÿ© ŸÅŸä ÿ£ŸàŸÇÿßÿ™Ÿáÿß",
                "color": "@colorAccent",
                "fontSize": "28dp",
                "textAlign": "center"
              }
            ]
          }
        ]
      }
    ]
  }
}
