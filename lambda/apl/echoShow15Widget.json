        "colorBackground": "#0F1419",
        "colorCardBg": "#1A1F26",
        "colorText": "#FFFFFF",
        "colorTextSecondary": "#B0B0B0",
        "colorHighlight": "#2C8C5F"
      },
      "dimensions": {
        "headerHeight": "140dp",
        "prayerCardWidth": "280dp",
        "prayerCardHeight": "200dp",
        "spacing": "30dp",
        "sidebarWidth": "350dp"
      }
    }
  ],
  "styles": {
    "headerStyle": {
      "values": [
        {
          "color": "@colorText",
          "fontSize": "56dp",
          "fontWeight": "700"
        }
      ]
    },
    "cityStyle": {
      "values": [
        {
          "color": "@colorTextSecondary",
          "fontSize": "40dp"
        }
      ]
    },
    "dateStyle": {
      "values": [
        {
          "color": "@colorTextSecondary",
          "fontSize": "32dp"
        }
      ]
    },
    "prayerNameStyle": {
      "values": [
        {
          "color": "@colorText",
          "fontSize": "48dp",
          "fontWeight": "600"
        }
      ]
    },
    "prayerTimeStyle": {
      "values": [
        {
          "color": "@colorAccent",
          "fontSize": "56dp",
          "fontWeight": "700"
        }
      ]
    },
    "sectionTitleStyle": {
      "values": [
        {
          "color": "@colorAccent",
          "fontSize": "36dp",
          "fontWeight": "600"
        }
      ]
    },
    "infoTextStyle": {
      "values": [
        {
          "color": "@colorText",
          "fontSize": "28dp"
        }
      ]
    }
  },
