          {
            "type": "Text",
            "text": "${prayerIcon}",
            "fontSize": "64dp"
          },
          {
            "type": "Text",
            "text": "${prayerName}",
            "style": "prayerNameStyle",
            "fontSize": "44dp"
          },
          {
            "type": "Text",
            "text": "${prayerTime}",
